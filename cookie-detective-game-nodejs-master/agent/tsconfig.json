{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es6"],
    "module": "commonjs",
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "pretty": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "sourceMap": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["./dist"]
}
